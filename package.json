{
  "name": "lightdotso",
  "version": "1.0.3",
  "homepage": "https://www.light.so",
  "bugs": {
    "url": "https://github.com/LightDotSo/LightDotSo/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LightDotSo/LightDotSo.git"
  },
  "license": "GPL-3.0",
  "author": "Light, Inc.",
  "workspaces": [
    "apps/*",
    "components/*",
    "contracts/*",
    "configurations/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean && rm -rf node_modules",
    "depcheck:lint": "pnpm -r --no-bail exec depcheck .",
    "eslint:cmd": "eslint --config .eslintrc.js --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint",
    "eslint:fix": "eslint --config .eslintrc.js --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint . --fix",
    "eslint:lint": "eslint --config .eslintrc.js --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "fix": "concurrently 'pnpm:*:fix'",
    "forge:snapshot": "forge snapshot",
    "forge:snapshot:check": "forge snapshot --check",
    "forge:snapshot:cmd": "FOUNDRY_PROFILE=local forge snapshot && echo",
    "git-ignore:cp": "pnpm run git-ignore:cp:api && pnpm run git-ignore:cp:home",
    "git-ignore:cp:api": "cp .gitignore apps/api/.gitignore",
    "git-ignore:cp:home": "cp .gitignore apps/home/.gitignore",
    "lint": "concurrently 'pnpm:*:lint'",
    "ncu:check": "ncu--packageFile '{apps,components,contracts,configurations,packages}/**/package.json'",
    "ncu:monorepo": "ncu --packageFile '{apps,components,contracts,configurations,packages}/**/package.json' -u",
    "ncu:root": "ncu --packageFile package.json -u",
    "ncu:upgrade": "pnpm run ncu:root && pnpm run ncu:monorepo",
    "npm-package-json:lint": "npmPkgJsonLint ./apps ./components ./contracts ./configurations ./packages",
    "prepare": "husky install",
    "prepublishOnly": "pinst --disable",
    "prettier:cmd": "prettier",
    "prettier:fix": "prettier --write .",
    "prettier:lint": "prettier --check .",
    "postpublish": "pinst --enable",
    "release": "changeset publish",
    "release:root": "cross-env HUSKY=0 pnpm release-it",
    "restore": "git restore . --recurse-submodules",
    "solhint:cmd": "solhint 'contracts/**/*.sol'",
    "solhint:fix": "solhint 'contracts/**/*.sol' --fix",
    "solhint:lint": "solhint 'contracts/**/*.sol'",
    "sort-package-json:fix": "sort-package-json '{apps,components,contracts,configurations,packages}/**/package.json'",
    "vercel:cp": "pnpm run vercel:cp:api && pnpm run vercel:cp:home",
    "vercel:cp:api": "cp vercel.sh apps/api/vercel.sh",
    "vercel:cp:home": "cp vercel.sh apps/home/vercel.sh",
    "version-packages": "changeset version && pnpm run fix"
  },
  "resolutions": {
    "@types/react": "^17.0.43",
    "@types/react-dom": "^17.0.14",
    "tailwindcss": "^3.0.24"
  },
  "dependencies": {
    "next": "^12.3.0",
    "rimraf": "^3.0.2",
    "turbo": "^1.4.6",
    "typescript": "^4.8.3"
  },
  "devDependencies": {
    "@changesets/cli": "^2.24.4",
    "@commitlint/config-conventional": "^17.1.0",
    "@lightdotso/eslint-config": "workspace:*",
    "@lightdotso/prettier": "workspace:*",
    "@lightdotso/tailwindcss": "workspace:*",
    "@next/eslint-plugin-next": "^12.3.0",
    "@release-it/keep-a-changelog": "^3.1.0",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "@typescript-eslint/parser": "^5.37.0",
    "autoprefixer": "^10.4.11",
    "commitlint": "^17.1.2",
    "concurrently": "^7.4.0",
    "cross-env": "^7.0.3",
    "depcheck": "^1.4.3",
    "eslint": "^8.23.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-turbo": "^0.0.3",
    "eslint-import-resolver-typescript": "^3.5.1",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsonc": "^2.4.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.8",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-tailwindcss": "3.6.2",
    "git-cz": "^4.9.0",
    "hardhat": "^2.11.2",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "npm-check-updates": "^16.1.3",
    "npm-package-json-lint": "^6.3.0",
    "npm-package-json-lint-config-default": "^5.0.0",
    "prettier": "^2.7.1",
    "prettier-plugin-packagejson": "^2.2.18",
    "prettier-plugin-solidity": "^1.0.0-beta.24",
    "prettier-plugin-sort-json": "^0.0.3",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "release-it": "^15.4.2",
    "shx": "^0.3.4",
    "solc": "^0.8.17",
    "solhint": "^3.3.7",
    "sort-package-json": "^1.57.0",
    "tsconfig-paths-webpack-plugin": "^4.0.0",
    "tsup": "^6.2.3",
    "vercel": "^28.2.5",
    "webpack-dev-server": "^4.11.0"
  },
  "packageManager": "pnpm@6.30.0",
  "pnpm": {
    "patchedDependencies": {
      "hardhat-deploy@0.11.15": "patches/hardhat-deploy@0.11.15.patch",
      "hardhat@2.11.2": "patches/hardhat@2.11.2.patch"
    }
  }
}
