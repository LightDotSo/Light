{
  "name": "lightdotso",
  "version": "1.0.0",
  "homepage": "https://www.light.so",
  "bugs": {
    "url": "https://github.com/LightDotSo/LightDotSo/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LightDotSo/LightDotSo.git"
  },
  "license": "GPL-3.0",
  "author": "Light, Inc.",
  "workspaces": [
    "apps/*",
    "components/*",
    "configurations/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean && rm -rf node_modules",
    "depcheck:lint": "pnpm -r --no-bail exec depcheck .",
    "eslint:cmd": "eslint --config .eslintrc.js --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint",
    "eslint:fix": "eslint --config .eslintrc.js --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint . --fix",
    "eslint:lint": "eslint --config .eslintrc.js --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "fix": "concurrently 'pnpm:*:fix'",
    "git-ignore:cp": "pnpm run git-ignore:cp:api && pnpm run git-ignore:cp:home",
    "git-ignore:cp:api": "cp .gitignore apps/api/.gitignore",
    "git-ignore:cp:home": "cp .gitignore apps/home/.gitignore",
    "lint": "concurrently 'pnpm:*:lint'",
    "ncu:check": "ncu --deep",
    "ncu:upgrade": "ncu --deep -u",
    "npm-package-json:lint": "npmPkgJsonLint .",
    "prepare": "husky install",
    "prepublishOnly": "pinst --disable",
    "prettier:cmd": "prettier",
    "prettier:fix": "prettier --write .",
    "prettier:lint": "prettier --check .",
    "postpublish": "pinst --enable",
    "release": "changeset publish",
    "release:root": "pnpx release-it --github.release --no-npm",
    "restore": "git restore . --recurse-submodules",
    "version-packages": "changeset version && pnpm run fix",
    "vercel:cp": "pnpm run vercel:cp:api && pnpm run vercel:cp:home",
    "vercel:cp:api": "cp vercel.sh apps/api/vercel.sh",
    "vercel:cp:home": "cp vercel.sh apps/home/vercel.sh"
  },
  "npmpackagejsonlint": {
    "extends": "npm-package-json-lint-config-default"
  },
  "resolutions": {
    "@types/react": "^17.0.43",
    "@types/react-dom": "^17.0.14",
    "tailwindcss": "^3.0.24"
  },
  "dependencies": {
    "next": "^12.2.1",
    "rimraf": "^3.0.2",
    "turbo": "^1.3.1",
    "typescript": "^4.7.4"
  },
  "devDependencies": {
    "@changesets/cli": "^2.23.1",
    "@commitlint/config-conventional": "^17.0.3",
    "@lightdotso/eslint-config": "workspace:*",
    "@lightdotso/prettier": "workspace:*",
    "@lightdotso/tailwindcss": "workspace:*",
    "@next/eslint-plugin-next": "^12.2.1",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "autoprefixer": "^10.4.7",
    "commitlint": "^17.0.3",
    "concurrently": "^7.2.2",
    "depcheck": "^1.4.3",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.2.4",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsonc": "^2.3.1",
    "eslint-plugin-jsx-a11y": "^6.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-tailwindcss": "3.6.0",
    "git-cz": "^4.9.0",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "npm-check-updates": "^15.2.1",
    "npm-package-json-lint": "^6.3.0",
    "npm-package-json-lint-config-default": "^5.0.0",
    "prettier": "^2.7.1",
    "prettier-plugin-packagejson": "^2.2.18",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "prettier-plugin-sort-json": "^0.0.2",
    "prettier-plugin-tailwindcss": "^0.1.12",
    "release-it": "^15.1.1",
    "shx": "^0.3.4",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "tsup": "^6.1.3",
    "vercel": "^27.0.0",
    "webpack-dev-server": "^4.9.3"
  },
  "packageManager": "pnpm@6.30.0"
}
