{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2020"],
    "module": "commonjs",
    "skipLibCheck": true,
    "strict": true,
    "target": "es5",
    "types": ["jest", "mocha", "node"]
  },
  "extends": "./node.json",
  "include": ["deploy", "scripts", "spec", "typechain", "hardhat.config.ts"],
  "exclude": ["node_modules"]
}
