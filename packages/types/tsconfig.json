{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": false,
    "noEmitOnError": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es5",
    "types": []
  },
  "exclude": ["dist", "build", "node_modules"],
  "include": ["."]
}
