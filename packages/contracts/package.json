{
  "name": "@lightdotso/contracts",
  "version": "1.0.1",
  "private": false,
  "homepage": "https://github.com/LightDotSo/LightDotSo",
  "bugs": {
    "url": "https://github.com/LightDotSo/LightDotSo/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/LightDotSo/LightDotSo.git"
  },
  "license": "GPL-3.0",
  "author": "Light, Inc.",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "scripts": {
    "build": " pnpm run clean && pnpm run build:hh && pnpm run build:ts",
    "build:hh": "cd ../.. && pnpm hardhat compile --force",
    "build:ts": "pnpm run compile",
    "clean": "cd ../.. && pnpm hardhat clean",
    "compile": "tsc",
    "coverage": "hardhat coverage",
    "env:pull": "doppler secrets download --no-file --format env > ../../.env",
    "node": "cd ../.. && hardhat node --hostname 0.0.0.0 --show-accounts",
    "test": "cd ../.. && hardhat test",
    "test:coverage": "cd ../.. && hardhat coverage",
    "test:gas": "cd ../.. && REPORT_GAS=true hardhat test",
    "watch": "cd ../../ && pnpm run watch:compile",
    "watch:compile": "hardhat watch compile"
  },
  "dependencies": {
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/providers": "^5.7.0",
    "@lightdotso/ens": "workspace:*",
    "@lightdotso/protocol": "workspace:*",
    "@lightdotso/proxies": "workspace:*",
    "@lightdotso/renderer": "workspace:*",
    "@lightdotso/tsconfig": "workspace:*",
    "@lightdotso/upgradeable": "workspace:*",
    "@nomiclabs/hardhat-ethers": "^2.1.1",
    "@nomiclabs/hardhat-etherscan": "^3.1.0",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@openzeppelin/hardhat-upgrades": "^1.20.0",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.2",
    "ethers": "^5.7.0",
    "hardhat": "^2.10.2",
    "hardhat-abi-exporter": "^2.10.0",
    "hardhat-deploy": "^0.11.12",
    "hardhat-gas-reporter": "^1.0.8",
    "hardhat-preprocessor": "^0.1.4",
    "hardhat-watcher": "^2.5.0",
    "solc": "^0.8.16",
    "toml": "^3.0.0"
  },
  "devDependencies": {
    "dotenv": "^16.0.2",
    "ethereum-waffle": "^3.4.4",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "typechain": "^8.1.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  }
}
