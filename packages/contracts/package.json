  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "scripts": {
    "build": " pnpm run clean && pnpm run build:hh && pnpm run build:ts",
    "build:hh": "cd ../.. && pnpm hardhat compile --force",
    "build:ts": "pnpm run compile",
    "clean": "cd ../.. && pnpm hardhat clean",
    "compile": "tsc",
    "coverage": "cd ../.. && pnpm hardhat coverage",
    "env:pull": "doppler secrets download --no-file --format env > ../../.env",
    "node": "cd ../.. && pnpm hardhat node --hostname 0.0.0.0 --show-accounts",
    "test": "cd ../.. && pnpm hardhat test",
    "test:coverage": "cd ../.. && pnpm hardhat coverage",
    "test:gas": "cd ../.. && REPORT_GAS=true pnpm hardhat test",
    "watch": "cd ../../ && pnpm run hardhat watch compile"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  }
