{
  "baseBranch": "origin/main",
  "globalDependencies": ["pnpm-workspace.yaml", "tsconfig.json", ".env.*"],
  "pipeline": {
    "@lightdotso/app#build": {
      "dependsOn": [
        "^build",
        "$NEXT_PUBLIC_ALCHEMY_ID",
        "$NEXT_PUBLIC_ETHERSCAN_API_KEY",
        "$NEXT_PUBLIC_INFURA_ID",
        "$NEXT_PUBLIC_SENTRY_DSN",
        "$NEXT_PUBLIC_VERCEL_ENV",
        "$NEXT_PUBLIC_ZERION_API_KEY",
        "$SENTRY_DSN",
        "$VERCEL_ENV"
      ],
      "outputs": [".next/**"]
    },
    "@lightdotso/contracts#build": {
      "dependsOn": ["^build"],
      "outputs": ["abi/**", "artifacts/**", "dist/**", "typechain/**"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["artifacts/**", "dist/**", ".next/**"]
    },
    "clean": {
      "cache": false
    },
    "dev": {
      "cache": false
    },
    "test": {
      "dependsOn": ["build"]
    },
    "//#lint": {
      "dependsOn": [],
      "outputs": [],
      "inputs": [
        "apps/**/src/**/*.ts",
        "apps/**/src/**/*.tsx",
        "components/**/src/**/*.ts",
        "components/**/src/**/*.tsx",
        "configurations/**/src/**/*.ts",
        "configurations/**/src/**/*.tsx",
        "packages/**/src/**/*.ts",
        "packages/**/src/**/*.tsx"
      ]
    }
  }
}
